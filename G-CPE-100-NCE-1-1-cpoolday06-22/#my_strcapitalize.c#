#include <stdio.h>

int is_upper(char c) {
    return (c >= 'A' && c <= 'Z');
}

int is_lower(char c) {
    return (c >= 'a' && c <= 'z');
}

char handle_upper(char c, int *j) {
    if (*j == 1) {
        *j = 2;
        return c;
    }
    return c + 32;
}

char handle_lower(char c, int *j) {
    if (*j == 1) {
        *j = 2;
        return c - 32;
    }
    return c;
}

char *my_strcapitalize(char *str) {
    int j = 1;

    for (int i = 0; str[i] != '\0'; i++) {
        if (is_upper(str[i])) {
            str[i] = handle_upper(str[i], &j);
            continue;
        }

        if (is_lower(str[i])) {
            str[i] = handle_lower(str[i], &j);
            continue;
        }

        j = 1;
    }
    return str;
}


